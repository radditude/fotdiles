#!/usr/bin/env bash

################
### FOTDILES ###
################

# This script is responsible for the following:
#
# - Installing things:
#   - symlinking anything with a `.symlink` extension to `$HOME`
#   - running anything called `install.sh` to install or set up software
# - Updating things:
#   - safe to run multiple times
# 

set -e

DOTFILES=${DOTFILES:-"$HOME/.fotdiles"}
SCRIPTS=$DOTFILES/fotdiles

source $DOTFILES/functions/log

displayUsageAndExit() {
	echo ""
	success "fotdiles -- namage your fotdiles"
	info "Usage: fotdiles [options]"
	echo ""
	info "Options:"
	info "  none          Symlink files and install software"
	info "  -e, --edit    Open dotfiles directory in editor"
	info "  -h, --help    Show this help message"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help"|"help")
			displayUsageAndExit
			;;
		"-e"|"--edit"|"edit")
			exec "$EDITOR" "$DOTFILES"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

info "pulling latest from Github"
cd "$DOTFILES"
git pull > /dev/null
success "fotdiles installation updated"

$SCRIPTS/link $DOTFILES

# instally things go here

# git config stuff goes here

success "You are fully installed and up to date."
